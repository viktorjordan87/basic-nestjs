{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/basic-nestjs/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/basic-nestjs/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/basic-nestjs",
  "projects": {
    "basic-nestjs": {
      "type": "application",
      "root": "apps/basic-nestjs",
      "entryFile": "main",
      "sourceRoot": "apps/basic-nestjs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/basic-nestjs/tsconfig.app.json"
      }
    },
    "second-nestjs": {
      "type": "application",
      "root": "apps/second-nestjs",
      "entryFile": "main",
      "sourceRoot": "apps/second-nestjs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/second-nestjs/tsconfig.app.json"
      }
    },
    "typeorm-mysql": {
      "type": "application",
      "root": "apps/typeorm-mysql",
      "entryFile": "main",
      "sourceRoot": "apps/typeorm-mysql/src",
      "compilerOptions": {
        "tsConfigPath": "apps/typeorm-mysql/tsconfig.app.json"
      }
    }
  }
}